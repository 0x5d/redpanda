                    <td>{{ "{:,}".format(atest.min_lat) }}</td>
                    <td>{{ "{:,}".format(atest.p99_lat) }}</td>
                    <td>{{ "{:,}".format(atest.second_max_lat) }}</td>
                    <td>{{ "{:,}".format(atest.max_lat) }}</td>
                    <td>{{ "{:,}".format(atest.max_unavailability) }}</td>
                </tr>
{% endfor %}
