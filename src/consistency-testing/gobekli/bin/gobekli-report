                    <td>{{ "{:,}".format(atest.first.max_unavailability) }}</td>
                </tr>
{% for atest in atest.rest %}
                <tr>
                    <th>
                        <a href="{{ atest.link }}">
                            {{ atest.id }}
                        </a>
